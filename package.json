{
  "name": "Lendy-tests",
  "version": "1.0.0",
  "description": "Run unit tests on this project.",
  "type": "module",
  "private": true,
  "scripts": {
    "test": "vitest run",
    "test:report": "vitest run -- --coverage --costs",
    "test:watch": "chokidar \"tests/**/*.ts\" \"contracts/**/*.clar\" -c \"npm run test:report\"",
    "deploy:testnet": "tsx scripts/deploy.ts testnet",
    "deploy:mainnet": "tsx scripts/deploy.ts mainnet",
    "test:deployment": "vitest run tests/deployment.test.ts"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@hirosystems/clarinet-sdk": "^3.6.1",
    "@pythnetwork/hermes-client": "^2.0.0",
    "@stacks/transactions": "^7.0.6",
    "chokidar-cli": "^3.0.0",
    "vitest": "^3.1.3",
    "vitest-environment-clarinet": "^2.3.0"
  },
  "devDependencies": {
    "@types/node": "^24.5.2",
    "tsx": "^4.7.0"
  }
}
